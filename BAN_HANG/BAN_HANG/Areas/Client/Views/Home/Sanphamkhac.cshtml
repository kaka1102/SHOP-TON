@using BAN_HANG.Areas.Client.Models
@using CS.Common.Untils
@{
    var data = (List<LstNewProduct>)Model;
}


<h4>SẢN PHẨM KHÁC</h4>

@if (data.Count > 0)
{
    foreach (var item in data)
    {
        <div class="product">
            <div style="width: 50%;float: left">
                <a href="/Home/ChitietSP/@(item.id)"><img class="img-responsive fashion" src="@(item.path_img)" alt="@(item.path_img)"></a>
            </div>
            <div style="width: 49%;float: right">
                <div class="grid-product">
                    <a href="/Home/ChitietSP/@(item.id)" class="elit">@(item.name)</a>
                    <span class="price price-in">@(DisplayUntil.DisplayMoney(item.gia_xuat)) đ</span>
                </div>
            </div>
            <div class="clearfix"> </div>
        </div>
    }
}
else
{
    <div class="product">
        <h3>Không có dữ liệu</h3>
        <div class="clearfix"> </div>
    </div>
}
