

@using CS.Common.Const

<div>
    <div class="box-body">
        <div class="row">
            <div class="col-sm-12" id="content-container">
                <table id="tbl-content" class="table table-bordered table-hover" style="width: 100% !important">
                    <thead>
                        <tr>
                            <th>Họ tên</th>
                            <th>Địa chỉ</th>
                            <th>Số ĐT</th>
                            <th>Email</th>
                            <th>Tiêu đề</th>
                            <th>Nội dung</th>
                            <th>N.Gửi</th>
                            <th>Trạng thái</th>
                            <th>Người trả lời</th>
                            <th>N.trả lời</th>
                            <th style="width: 10%">Tùy chọn</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>


<script type="text/javascript">

    $(function () {
        LoadAllBranch();
    });

    function LoadAllBranch() {

        var tblContent = $('#tbl-content').dataTable({
            ajax: {
                url: "/Contactcustomer/_DSYkienKH",
                type: 'POST'

            },
            processing: true,
            serverSide: true,
            bSort: false,
            columns: [
                {
                    data: 'hoten',
                    class: 'text-center'
                },
                {
                    data: 'diachi',
                    class: 'text-center'
                },
                {
                    data: 'dienthoai',
                    class: 'text-center'
                },
                {
                    data: 'email',
                    class: 'text-center'
                },
                {
                    data: 'tieude',
                    class: 'text-center'
                },
                {
                    data: 'noidung',
                    class: 'text-center'
                },
                {
                    data: 'ngaygui',
                    class: 'text-center'
                },
                {
                    data: 'trangthai',
                    mRender:function(data) {
                        if (data ===0) {
                            return data = "<span style='color:red'>Tin nhắn mới</span>";
                        } else {
                            return data ="<span style='color:blue'>Đã trả lời</span>";
                        }
                    },
                    class: 'text-center'
                },
                {
                    data: 'nguoitraloi',
                    class: 'text-center'
                },
                {
                    data: 'ngaytraloi',
                    class: 'text-center'
                },
                {
                    data: 'id',
                    mRender: function (data) {
                        return '<button class="btn btn-primary dim  icon-index hint--top" aria-label="Xác nhận đã trả lời tin nhắn" type="button"> <i class="fa fa-edit"></i> </button>';
                    },
                    class: 'text-center'
                }
            ],
            "columnDefs": [
                {
                    "orderable": false,
                    "targets": 'no-sort'
                }
            ],
            "order": [[1, 'asc']],
            responsive: true,
            bLengthChange: false,
            initComplete: function (settings, json) {

            },
            fnCreatedRow: function (row, data, index) {
                $(row).css("background-color", "#eae7d0");
            },
            language: {
                lengthMenu: "Độ dài",
                zeroRecords: "không có dữ liệu",
                info: "Tổng cộng _TOTAL_ bản ghi",
                emptyTable: "Không có bản ghi",
                infoEmpty: "Không có bản ghi",
                loadingRecords: "Đang tải",
                search: "Tìm kiếm",
                searchPlaceholder: "Tìm kiếm",
                paginate: {
                    first: "Trang đầu",
                    last: "Trang cuối",
                    next: "Tiếp",
                    previous: "Quay lại"
                }
            }
        });
        tblContent.on('click',
            '.btn-primary',
            function() {
                var closestRow = $(this).closest('tr');
                var data = tblContent.api().row(closestRow).data();
              
                BootstrapDialog.confirm({
                    title: 'CHÚ Ý',
                    message: "Xác nhận đã trả lời tin nhắn của khách hàng này không ??",
                    type: BootstrapDialog.TYPE_WARNING,
                    closable: true,
                    draggable: true,
                    btnCancelLabel: 'CANCEL',
                    btnOKLabel: 'OK',
                    btnOKClass: 'btn-warning',
                    callback: function (result) {
                        if (result) {
                            var dataJson = {
                                id: data.id
                            }
                           CallAjax("GET", '@Url.Action("ChangeStatus")', dataJson, ChangeStatusRoomCallBack);
                        }
                    }
                });
            });
    }

    function ChangeStatusRoomCallBack(data) {
        BootstrapDialog.alert(
            {
                title: 'THÔNG BÁO',
                type: BootstrapDialog.TYPE_SUCCESS,
                message: data.result.Message,
                callback: function () {
                    $('#tbl-content').dataTable().api().ajax.url('/Contactcustomer/_DSYkienKH').load();
                }
            }
        );
    }
</script>







