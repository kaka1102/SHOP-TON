
@using CS.Common.Const
<table id="tbl-content" class="table table-bordered table-hover">
    <thead>
    <tr>
        <th style="width: 50px;"></th>
        <th>ID</th>
        <th>Tên loại sản phẩm</th>
        <th>Mô tả</th>
        <th>Trạng thái</th>
        <th style="width: 15%">Tùy chọn</th>
    </tr>
    </thead>
</table>
<script type="text/javascript">
    $(document).ready(function() {
        LoadAllCustomer();
    });

    function LoadAllCustomer() {

        var tblContent = $('#tbl-content').dataTable({
            ajax: {
                url: "/ManagerCategory/_ListCategory",
                type: 'POST'
            },
            processing: true,
            serverSide: true,
            bSort: false,
            columns: [
                {
                    data: 'id',
                    mRender:function(data) {
                        return "";
                    },
                    class: 'details-control'
                },
                {
                    data: 'id',
                    class: 'text-center'
                },
                {
                    data: 'category_name',
                    class: 'text-center'
                },
                {
                    data: 'description',
                    class: 'text-center'
                },
                {
                    data: 'isactive',
                    mRender: function (data) {
                        if (data === true) {
                            return "<span style='color:blue'>Đang sử dụng</span>";
                     } else {
                            return "<span style='color:red'>Không sử dụng</span>";
                     }
                    },
                    class: 'text-center'
                },
                {
                    data: 'id',
                    mRender: function(data) {
                        return '<button class="btn btn-primary dim  icon-index hint--top" aria-label="Chỉnh sửa thông tin" type="button"> <i class="fa fa-edit"></i> </button>' +
                               '<button class="btn btn-danger dim icon-index hint--top"   aria-label="Xóa loại sản phẩm" type="button"><i class="fa fa-trash-o"></i></button>';
                    },
                    class: 'text-center'
                }
            ],
            "columnDefs": [
                {
                    "orderable": false,
                    "targets": 'no-sort'
                }
            ],
            "order": [[1, 'asc']],
            responsive: true,
            bLengthChange: false,
            initComplete: function (settings, json) {

            },
            fnCreatedRow: function(row, data, index) {
                $(row).css("background-color", "#eae7d0");
            },
            language: {
                lengthMenu: "Độ dài",
                zeroRecords: "không có dữ liệu",
                info: "Tổng cộng _TOTAL_ bản ghi",
                emptyTable: "Không có bản ghi",
                infoEmpty: "Không có bản ghi",
                loadingRecords: "Đang tải",
                search: "Tìm kiếm",
                searchPlaceholder: "Tìm kiếm khách hàng",
                paginate: {
                    first: "Trang đầu",
                    last: "Trang cuối",
                    next: "Tiếp",
                    previous: "Quay lại"
                }
            }
        });
        var _table = $("#tbl-content").DataTable();

        tblContent.on('click',
            '.details-control',
            function() {
                var tr = $(this).closest('tr');
                var row = _table.row(tr);
                var data = row.data();
                $.ajax({
                    url: "/ManagerCategory/GetAllProductByIDCategory",
                    data: {
                        id: data.id
                    },
                    type: "GET",
                    dataType: "html",
                    success: function(data) {
                        if (row.child.isShown()) {
                            row.child.hide();
                            tr.removeClass('shown');
                        } else {
                            row.child(data).show();
                            tr.addClass('shown');
                        }
                        return data;
                    },
                    beforeSend: function() {
                    }
            });
            });
        tblContent.on('click',
            '.btn-primary', function () {
                var closestRow = $(this).closest('tr');
                var data = tblContent.api().row(closestRow).data();
                $(this).colorbox({
                    iframe: true,
                    innerWidth: "1000px",
                    innerHeight: "800px",
                    href: "/ManagerCategory/EditCategory?id=" + data.id
                });

            });
        tblContent.on('click',
            '.btn-danger',
            function() {
                var closestRow = $(this).closest('tr');
                var data = tblContent.api().row(closestRow).data();
                var id = data.id;
                BootstrapDialog.confirm({
                    title: 'CHÚ Ý',
                    message: '@SystemMessageConst.systemmessage.ConfirmAfterDelete',
                    type: BootstrapDialog.TYPE_WARNING,
                    closable: true,
                    draggable: true,
                    btnCancelLabel: 'CANCEL',
                    btnOKLabel: 'OK',
                    btnOKClass: 'btn-warning',
                    callback: function (result) {
                        if (result) {
                            var dataJson = {
                                id: id
                            }
                            CallAjax("GET", '@Url.Action("DeleteCategory")', dataJson, DeleteCallBack);
                        }
                    }
                });
            });
    }

    function DeleteCallBack(data) {
        BootstrapDialog.alert(
            {
                title: 'THÔNG BÁO',
                type: BootstrapDialog.TYPE_SUCCESS,
                message: data.result.Message,
                callback: function() {
                    LoadPartialView('@Url.Action("ListCategory")', $("#parent-content-container"));
                }
            }
        );
    }

</script>

