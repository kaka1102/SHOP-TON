

@using CS.Common.Const

<div>
    <div class="box-body">
        <div class="row">
            <div class="col-sm-12" id="content-container">
                <table id="tbl-content" class="table table-bordered table-hover" style="width: 100% !important">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Tên chi nhánh</th>
                            <th>Địa chỉ</th>
                            <th>Số ĐT</th>
                            <th>Mã số thuế</th>
                            <th>Mã chi nhánh</th>
                            <th>Tên rút gọn</th>
                            <th>Thành phố</th>
                            <th>Trạng thái</th>
                            <th style="width: 15%">Tùy chọn</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>


<script type="text/javascript">

    $(function () {
        LoadAllBranch();
    });
    
    function LoadAllBranch() {

        var tblContent = $('#tbl-content').dataTable({
            ajax: {
                url: "/Branch/_LoadListBranch",
                type: 'POST'

            },
            rowReorder: {
                selector: 'td:nth-child(2)'
            },
            processing: true,
            serverSide: true,
            bSort: false,
            columns: [
                {
                    data: 'Id',
                    class: 'text-center'
                },
                {
                    data: 'Name',
                    class: 'text-center'
                },
                {
                    data: 'AddressName',
                    class: 'text-center'
                },
                {
                    data: 'Phone',
                    class: 'text-center'
                },
                {
                    data: 'Tax_Number',
                    class: 'text-center'
                },
                {
                    data: 'Branch_code',
                    class: 'text-center'
                },
                {
                    data: 'ShortName',
                    class: 'text-center'
                },
                {
                    data: 'City',
                    class: 'text-center'
                },
                {
                    data: 'is_active',
                    mRender:function(data) {
                        if (data == 1) {
                            return data = "Hoạt động";
                        } else {
                            return data = "Đã khóa";
                        }
                    },
                    class: 'text-center'
                },

                {
                    data: 'is_active',
                    mRender: function (data) {
                        var css = "fa-unlock-alt";
                        var title = "Mở khóa";

                        if (data ==1) {
                            title = "Khóa chi nhánh";
                            css = " fa-unlock";
                        }
                        return '<button class="btn btn-primary dim  icon-index hint--top" aria-label="Chỉnh sửa thông tin chi nhánh" type="button"> <i class="fa fa-edit"></i> </button>' +
                               '<button id="btn-lock-card" class="btn btn-danger  dim  icon-index hint--top" aria-label="' + title + '" type="button"><i class="fa ' + css +'"></i></button>';
                    },

                    class: 'text-center'
                }
            ],
            "columnDefs": [
                {
                    "orderable": false,
                    "targets": 'no-sort'
                }
            ],
            "order": [[1, 'asc']],
            responsive: true,
            bLengthChange: false,
            initComplete: function (settings, json) {

            },
            fnCreatedRow: function (row, data, index) {
                $(row).css("background-color", "#eae7d0");
            },
            language: {
                lengthMenu: "Độ dài",
                zeroRecords: "không có dữ liệu",
                info: "Tổng cộng _TOTAL_ bản ghi",
                emptyTable: "Không có bản ghi",
                infoEmpty: "Không có bản ghi",
                loadingRecords: "Đang tải",
                search: "Tìm kiếm",
                searchPlaceholder: "Tìm kiếm",
                paginate: {
                    first: "Trang đầu",
                    last: "Trang cuối",
                    next: "Tiếp",
                    previous: "Quay lại"
                }
            }
        });



        tblContent.on('click',
            '.btn-primary', function () {
                var closestRow = $(this).closest('tr');
                var data = tblContent.api().row(closestRow).data();
                $(this).colorbox({
                    iframe: true,
                    innerWidth: "1000px",
                    innerHeight: "600px",
                    href: "/Branch/EditBranch?id=" + data.Id
                });

            });
        tblContent.on('click',
            '#btn-lock-card',
            function() {
                var closestRow = $(this).closest('tr');
                var data = tblContent.api().row(closestRow).data();
                var mess = "";
                if (data.is_active ==0) {
                    mess = '@SystemMessageConst.systemmessage.ConfirmUnLockBrandch';
                }
                else
                {
                    mess = '@SystemMessageConst.systemmessage.ConfirmLockBrandch';
                }
                BootstrapDialog.confirm({
                    title: 'CHÚ Ý',
                    message: mess,
                    type: BootstrapDialog.TYPE_WARNING,
                    closable: true,
                    draggable: true,
                    btnCancelLabel: 'CANCEL',
                    btnOKLabel: 'OK',
                    btnOKClass: 'btn-warning',
                    callback: function (result) {
                        if (result) {
                            var dataJson = {
                                id: data.Id,
                                status: data.is_active
                            }
                           CallAjax("GET", '@Url.Action("ChangeStatusBranch")', dataJson, ChangeStatusRoomCallBack);
                        }
                    }
                });
            });
    }

    function ChangeStatusRoomCallBack(data) {
        BootstrapDialog.alert(
            {
                title: 'THÔNG BÁO',
                type: BootstrapDialog.TYPE_SUCCESS,
                message: data.result.Message,
                callback: function () {
                    $('#tbl-content').dataTable().api().ajax.url('/Branch/_LoadListBranch').load();
                }
            }
        );
    }
</script>






