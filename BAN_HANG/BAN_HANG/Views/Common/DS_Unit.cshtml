

<select id="@ViewBag.id" class="form-control" @(ViewBag.isDisable == true ? "Disabled='Disabled'" : "")>

    @if (Model.Count > 0)
    {
        foreach (var item in Model)
        {
            <option value="@(item.id)" @(ViewBag.idSelected == item.id ? "selected='selected'" : "")>@(item.unit_name)</option>
        }
    }
    else
    {
        <option value="0">--Không có đơn vị--</option>
    }
</select>




