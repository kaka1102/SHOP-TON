
<select id="@ViewBag.id" @(ViewBag.isDisable == true ? "Disabled='Disabled'" : "") data-placeholder="Chọn sản phẩm..." class="chosen-select" tabindex="-1" style="display: none;">

    @if (Model.Count > 0)
    {
        <option value="-1" selected="selected" disabled="disabled">Chọn sản phẩm</option>
        foreach (var item in Model)
        {
            <option value="@(item.id_product)" @(ViewBag.idSelected == item.id_product ? "selected='selected'" : "")>@( "(Còn - " + item.soluong + ")" + " - " + item.tensp)</option>
        }
    }
    else
    {
        <option value="0">--Không có sản phẩm--</option>
    }
</select>
