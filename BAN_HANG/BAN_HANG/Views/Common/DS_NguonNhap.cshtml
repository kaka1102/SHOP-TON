
<select id="@ViewBag.id" @(ViewBag.isDisable == true ? "Disabled='Disabled'" : "") data-placeholder="Chọn nguồn nhập..." class="chosen-select" tabindex="-1" style="display: none;">

    @if (Model.Count > 0)
    {
        <option value="-1" selected="selected" disabled="disabled">Chọn nguồn</option>
        foreach (var item in Model)
        {
            <option data-code="@(item.code)" value="@(item.id)" @(ViewBag.idSelected == item.id ? "selected='selected'" : "")>@(item.tennguon)</option>
        }
    }
    else
    {
        <option value="0">--Không có nguồn nhập--</option>
    }
</select>

