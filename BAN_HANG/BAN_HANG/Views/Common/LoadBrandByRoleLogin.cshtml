
<select id="@ViewBag.id" @(ViewBag.isDisable == true ? "Disabled='Disabled'" : "") data-placeholder="Chọn đại lý..." class="chosen-select" tabindex="-1" style="display: none;">

    @if (Model.Count > 0)
    {
        <option value="-1" selected="selected">Chọn tất cả</option>
        foreach (var item in Model)
        {
            <option value="@(item.Id)" @(ViewBag.idSelected == item.Id ? "selected='selected'" : "")>@(item.Name)</option>
        }
    }
    else
    {
        <option value="0">--Không có đại lý--</option>
    }
</select>



